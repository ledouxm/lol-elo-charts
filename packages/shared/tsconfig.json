{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "lib": ["es2021", "DOM"],
        "target": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "removeComments": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"]
}
