{
    "name": "@platformer/server",
    "scripts": {
        "lint": "ts-node -r tsconfig-paths/register ./src/main.ts",
        "dev-start": "pnpm esno -r tsconfig-paths/register ./src/main.ts",
        "dev": "nodemon",
        "env": "pnpm yenv print env.yaml development -f -s",
        "env:prod": "pnpm yenv print env.prod.yaml production -f -s",
        "prebuild": "rimraf dist && rimraf temp",
        "build": "pnpm prebuild && ttsc -b tsconfig.build.json --force",
        "start": "pnpm mikro-orm migration:up && NODE_ENV=production node dist/main.js",
        "migration:create": "pnpm prebuild && pnpm mikro-orm migration:create",
        "migration:up": "pnpm mikro-orm migration:up",
        "prettier": "prettier --write \"./{src,tests}/**/*\""
    },
    "dependencies": {
        "@fastify/cors": "^8.1.0",
        "@mikro-orm/core": "^5.3.1",
        "@mikro-orm/migrations": "^5.3.1",
        "@mikro-orm/postgresql": "^5.3.1",
        "@mikro-orm/reflection": "^5.3.1",
        "@pastable/core": "^0.1.13",
        "debug": "^4.3.2",
        "fastify": "^4.4.0",
        "jsonwebtoken": "^8.5.1",
        "middie": "^5.3.0",
        "pastable": "^2.0.11",
        "reflect-metadata": "^0.1.13",
        "yenv": "^3.0.0"
    },
    "devDependencies": {
        "@mikro-orm/cli": "^5.3.1",
        "@types/debug": "^4.1.7",
        "@types/jsonwebtoken": "^8.5.4",
        "@types/node": "^16.4.1",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "esno": "^0.8.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.4.0",
        "prettier-plugin-sorted": "^2.0.0",
        "rimraf": "^3.0.2",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "ttypescript": "^1.5.12",
        "typescript": "^4.3.5"
    },
    "engines": {
        "node": "^16.x"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/mikro-orm.config.js",
            "./dist/mikro-orm.config.js"
        ]
    },
    "importSort": {
        ".js, jsx, .ts, .tsx": {
            "options": {
                "ignoreTsConfig": true,
                "extraAliases": [
                    "@/*"
                ]
            }
        }
    }
}
