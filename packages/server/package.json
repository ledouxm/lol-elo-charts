{
    "name": "@rps/server",
    "scripts": {
        "lint": "ts-node -r tsconfig-paths/register ./src/main.ts",
        "dev-start": "yarn esno -r tsconfig-paths/register ./src/main.ts",
        "dev": "nodemon",
        "env": "yarn yenv print env.yaml development -f -s",
        "env:prod": "yarn yenv print env.prod.yaml production -f -s",
        "prebuild": "rimraf dist && rimraf temp",
        "build": "yarn prebuild && ttsc -b tsconfig.build.json --force",
        "start": "NODE_ENV=production node dist/main.js"
    },
    "dependencies": {
        "@pastable/core": "^0.1.13",
        "fastify": "^3.19.2",
        "ws": "^7.5.3"
    },
    "devDependencies": {
        "@types/node": "^16.4.1",
        "@types/ws": "^7.4.7",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "esno": "^0.8.0",
        "nodemon": "^2.0.12",
        "rimraf": "^3.0.2",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "ttypescript": "^1.5.12",
        "typescript": "^4.3.5"
    },
    "engines": {
        "node": "^14.x"
    }
}
