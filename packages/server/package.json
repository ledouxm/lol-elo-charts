{
    "name": "@rps/server",
    "scripts": {
        "dev-start": "ts-node -r tsconfig-paths/register ./src/main.ts",
        "dev": "nodemon",
        "env": "yarn yenv print env.yaml development -f -s",
        "env:prod": "yarn yenv print env.prod.yaml production -f -s",
        "prebuild": "node_modules/.bin/rimraf dist && node_modules/.bin/rimraf temp",
        "build": "yarn prebuild && yarn ttsc -b tsconfig.json --force",
        "start": "NODE_ENV=production node dist/main.js"
    },
    "dependencies": {
        "@pastable/core": "^0.1.12",
        "@types/express": "^4.17.13",
        "cors": "^2.8.5",
        "debug": "^4.3.2",
        "express": "^4.17.1",
        "fastify": "^3.19.2",
        "lib0": "^0.2.42",
        "lodash.debounce": "^4.0.8",
        "nanoid": "^3.1.25",
        "ws": "^7.5.3",
        "y-protocols": "^1.0.5",
        "y-websocket": "^1.3.16",
        "yjs": "^13.5.11"
    },
    "devDependencies": {
        "@types/node": "^16.4.1",
        "@types/react": "^17.0.17",
        "@types/ws": "^7.4.7",
        "nodemon": "^2.0.12",
        "rimraf": "^3.0.2",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "ttypescript": "^1.5.12",
        "typescript": "^4.3.5"
    },
    "engines": {
        "node": "^14.x"
    }
}
